<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Number of players"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/decrement_button"
                android:layout_width="15dp"
                android:layout_height="50dp"
                android:onClick="decrement"
                android:src="@drawable/minus_circular" />

            <ImageView
                android:id="@+id/blue_player"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="decrement"
                android:src="@drawable/player_blue" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/red_player"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="increment"
                android:src="@drawable/player_red" />

            <ImageView
                android:id="@+id/increment_button"
                android:layout_width="15dp"
                android:layout_height="50dp"
                android:onClick="increment"
                android:src="@drawable/add_circular" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="createTeams"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/start_icon" />

    </LinearLayout>
</LinearLayout>